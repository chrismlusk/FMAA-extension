{
	"manifest_version": 2,
	"name": "Friendship Madness",
	"description": "It's not March Madness; it's Friendship Madness. Update the web to reflect this.",
	"version": "1.0",
	"author": "Chris Lusk",

	"browser_action": {
		// "default_popup": "popup.html",
		"default_title": "Let's get friendly."
	},
	"content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*",
                "file://*/*"
            ],
            "js": [
                // "js/jquery.min.js",
                "js/script.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "icons": {
    	"16": "icon/icon16.png",
    	"48": "icon/icon48.png",
    	"128": "icon/icon128.png"
    }
}