{
  "manifest_version": 2,

  "name": "Friendship Madness",
  "version": "2.0",
  "description": "Make the web friendlier, y'all.",
  "author": "Chris Lusk",

  "background": {
    "scripts": ["scripts.js"],
    "persistent": false
  },

  "content_scripts": [{
    // "css": ["styles.css"],
    "js": ["scripts.js"],
    "matches": ["*://*/*"],
    "run_at": "document_end",
    "all_frames": true
  }],

  "icons":
  {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },

  "permissions": [
    "activeTab",
    "storage"
  ]
}
