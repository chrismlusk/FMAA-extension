{
    "name": "Friendship Madness",
	"description": "It's not March Madness; it's Friendship Madness. Let's make the web friendlier.",
	"version": "0.5",
    "manifest_version": 2,
	"author": "Chris Lusk",
    "browser_action": {
        "default_title": "Make the web friendlier."
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*",
                "file://*/*"
            ],
            "js": [
                "js/script.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "icons": {
    	"16": "icon/icon16.png",
    	"48": "icon/icon48.png",
    	"128": "icon/icon128.png"
    }
}